{
  "manifest_version": 3,
  "name": "Raw Thought Capture",
  "version": "0.4",
  "permissions": ["contextMenus", "scripting", "offscreen", "storage"],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}