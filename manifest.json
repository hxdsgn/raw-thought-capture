{
  "manifest_version": 3,
  "name": "Aha! - Raw Thought Capture",
  "version": "1.5.0",
  "description": "Capture and organize your thoughts quickly and efficiently.",
  "permissions": [
    "contextMenus",
    "scripting",
    "offscreen",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}